<h1>books_index</h1>

<%= link_to("新規作成", new_book_path) %>

<%= form_tag books_path, method: :get do %>
  <table border="1"> 
    <thead>
      <th>title</th>
    </thead>
    <tbody>
      <tr>
        <td><%= text_field_tag :title %></td>
      </tr>
    </tbody>
  </table>
  <%= submit_tag "検索" %>
<% end %>

<table border="1"> 
  <thead>
    <th>title</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% unless @books.blank? %>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %>:<%= book.title %></td>
          <td><%= link_to("詳細", book_path(book.id)) %></td>
          <td><%= link_to("削除", book_path(book.id), method: :delete ) %></td>
          <td><%= link_to("編集", edit_book_path(book.id)) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
